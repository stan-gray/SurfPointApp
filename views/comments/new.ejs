<% include ../partials/header %>

<div class="container">
    <div class="row">
       <h1 style="text-align: center;">Add New Comment to <%= campground.name%></h1>
        
        <div style="width: 45%; margin: 30px auto;">
            <form action="/slackspots/<%= campground._id %>/comments" method="POST"> <!--when we submit the form we'll go to /slackspots page-->
                <div class="form-group">
                    <textarea rows="3" class="form-control" type="text" name="comment[text]" placeholder="comment here" required></textarea>
                </div>
                <div class="form-group">
                    <button class="waves-effect waves-light btn btn-block">
                        submit
                        <i class="material-icons">send</i>
                    </button>
                </div>
            </form>
            
            <a href="/slackspots">Go back</a>
        </div>    
    </div>
</div>

<% include ../partials/footer %>