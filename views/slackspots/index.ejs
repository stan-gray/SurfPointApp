                    <img id="img200" src="<%= campground.image %>">
                    <div class="caption">
                        <%= campground.name %>
                    </div>
                    <p>
                        <a href="/slackspots/<%= campground._id %>" class="waves-effect waves-light btn">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
        
        
    </div>
</div>

