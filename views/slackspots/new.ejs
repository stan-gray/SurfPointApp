<% include ../partials/header %>

<div class="container">
    <div class="row">
       <h1 style="text-align: center;">Create a new slackspot</h1>
        
        <div style="width: 45%; margin: 30px auto;">
            <form action="/slackspots" method="POST"> <!--when we submit the form we'll go to /slackspots page-->
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" maxlength="27" required></input>
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01" required></input>-->
                <!--</div>-->
                <div class="form-group">
                    <input class="form-control" type="text" name="location" id="location" placeholder="location" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url" required></input>
                </div>
                <div class="form-group">
                    <textarea rows="9" class="form-control" type="text" name="description" placeholder="description" required></textarea>
                    
                </div>
                <div class="form-group">
                    <button class="waves-effect waves-light btn btn-block">
                        submit
                        <i class="material-icons">send</i>
                    </button>
                </div>
            </form>
            
            <a href="/slackspots">Go back</a>
        </div>    
    </div>
</div>

<% include ../partials/footer %>